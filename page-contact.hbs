{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Get the oldest n posts, and look for the one tagged #main, then construct
      a style for the body tag that uses this posts background image. The style
      is set to streach the image to fit.
--}}
{{#get "posts" limit="10" include="tags" order="published_at asc" as |articles pages|}}
{{log 'here'}}
{{#foreach articles}}
{{#has tag='#main'}}
<style>
body {background-image: url({{img_url feature_image}}); background-size: cover;  background-repeat: no-repeat; }
</style>
{{/has}}
{{/foreach}}
{{/get}}

{{#post}}
<article class="post-content {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

    <div class="post-content-body">
        {{content}}
    </div>

</article>
{{/post}}

{{#contentFor "extraFooter"}}
<div class='comp-badges'>
{{!-- this sucks, but I couldn't think of any other way of doing this --}}
    <img src='/content/images/2020/02/finalist2018.jpg' class='comp-badge'
     width='90px' height='90px'/>
</div>
{{/contentFor}}